<?xml version="1.0" encoding="utf-8"?>
<!--
 |
 | AM Application Descriptor File Template.
 |
 | Specifies parameters for identifying, installing, and launching AM applications.
 |
 | usage
 | =====
 | Use '$' prefix to access actionscript public variable in main class (e.g. {$language})
 | Use '@' prefix to access flash variables (e.g. {@fvBaseContent})
 | Don't use prefix to access xml node (e.g. {view.view[0].@class})
 |
 -->
<header title="%TITLE% - %VIEW%" flow="normal" history="yes" strict="yes" connections="1">
	<languages>
		<language id="pt" track="Portugues">
			<language id="br" track="Portugues_BR"/>
		</language>
		<language id="es" track="Espanol"/>
		<language id="en" track="English"/>
	</languages>
	<file id="layers" url="{@fvBaseContent}config/layers.xml" kb="4"/>
	<base id="base" class="Base" standard="home" mistake="home">
		<file id="params" url="{@fvBaseContent}config/params.xml" kb="4"/>
		<file id="tracks" url="{@fvBaseContent}config/tracks.xml" kb="4"/>
		<file id="texts" url="{@fvBaseContent}config/texts.xml" kb="4"/>
		<file id="links" url="{@fvBaseContent}config/links.xml" kb="4"/>
		<file id="base" url="{@fvBaseContent}content/views/base.swf" kb="4"/>
		<file id="root" url="{@fvBaseContent}content/views/root.swf" kb="4"/>
		<view id="home" class="views.Home"></view>
	</base>
</header>
